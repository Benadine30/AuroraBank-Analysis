<script>
function showPage(id, el) {
  document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
  document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  el.classList.add('active');
}

const chartDefaults = {
  responsive: true,
  maintainAspectRatio: true,
  plugins: { legend: { labels: { color: '#9090b0', font: { family: 'DM Sans', size: 11 }, boxWidth: 12 } } }
};

// Chart 1: Monthly Volume
const months = ['Jan-22','Mar-22','May-22','Jul-22','Sep-22','Nov-22','Jan-23','Mar-23','May-23','Jul-23','Sep-23','Nov-23','Jan-24','Mar-24','May-24','Jul-24','Sep-24'];
const volumes = [178432,185210,191840,188920,194380,187540,195280,203140,199870,202440,198120,196947,213251,198152,201583,198294,201935];
new Chart(document.getElementById('monthlyVolumeChart'), {
  type: 'line',
  data: {
    labels: months,
    datasets: [{
      label: 'Monthly Volume ($)',
      data: volumes,
      borderColor: '#00d4ff',
      backgroundColor: 'rgba(0,212,255,0.07)',
      borderWidth: 2,
      pointRadius: 3,
      pointBackgroundColor: '#00d4ff',
      fill: true,
      tension: 0.4
    }]
  },
  options: {
    ...chartDefaults,
    plugins: { legend: { display: false } },
    scales: {
      x: { grid: { color: 'rgba(30,30,58,0.6)' }, ticks: { color: '#5a5a7a', font: { size: 9 } } },
      y: { grid: { color: 'rgba(30,30,58,0.6)' }, ticks: { color: '#5a5a7a', font: { size: 9 }, callback: v => '$'+Math.round(v/1000)+'K' } }
    }
  }
});

